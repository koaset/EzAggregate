{
	"database": {
		"url":  "mongodb://localhost:27017/",
		"name": "test",
		"stores": [ 
			{
				"name": "banana_store",
				"fields": {
					"user_id": "string",
					"name": "string",
					"num_bananas": "number"
				},
				"cleanup": {
					"interval": "1h",
					"max_age": "1h"
				}
			}
		]
	},
	"restapi" : {
		"swagger_name": "EzAggregate - Test",
		"port": 8080,
		"base_path": "/api"
	},
	"rabbitmq" : {
		"url": "amqp://localhost"
	},
	"sources": [
		{
			"name": "banana_source",
			"store": "banana_store",
			"type": "restapi",
			"path": "/bananas",
			"description": "Add your bananas here!"
		},
		{
			"name": "banana_mq",
			"store": "banana_store",
			"type": "rabbitmq",
			"queue": "test_queue"
		}
	],
	"outputs": [
		{
			"name": "bananapi",
			"store": "banana_store",
			"type": "restapi",
			"description": "Sum of bananas per user",
			"path": "/bananas",
			"aggregation": {
				"name": "sum_bananas",
				"key": "user_id",
				"field": "num_bananas",
				"action": "sum",
				"order_by": "sum_bananas",
				"invert": true
			},
			"time_options": {
				"field": "timestamp",
				"max_age": "1h"
			}
		},
		{
			"name": "bananapi_max",
			"store": "banana_store",
			"type": "restapi",
			"description": "Max of bananas per user",
			"path": "/bananas/max",
			"aggregation": {
				"name": "top_bananas",
				"key": "user_id",
				"field": "num_bananas",
				"action": "max",
				"order_by": "top_bananas",
				"invert": true
			}
		},
		{
			"name": "bananapi_all",
			"store": "banana_store",
			"type": "restapi",
			"description": "Returns all bananas",
			"path": "/bananas/all"
		}
	]
}
